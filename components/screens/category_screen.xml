<?xml version="1.0" encoding="utf-8" ?>
<component name="category_screen" extends="group" >
  <interface>
    <field id="category_selected" type="assocarray" alias="category_list.itemSelected" />
  </interface>
  <children>
    <Poster
      id="thumbnail"
      uri="pkg:/images/asterisk.png"
      loadDisplayMode = "scaleToFit"
			width="30"
      height="30"
      loadWidth="30"
      loadHeight="30"
      translation="[1230,20]"
			opacity="1" />
    <Poster
      id="background"
      width="1280"
      height="720"
      loadDisplayMode="scaleToZoom"
      translation="[0,0]"
      opacity="0.1" />
    <Label
      id="env"
      text="Subscriptions:"
      translation="[75,150]" />
    <MarkupList
      id="category_list"
      translation="[100,200]"
      itemSize="[520,70]"
      itemSpacing="[10,10]"
      focusBitmapBlendColor="0xFFFFFF50"
      itemComponentName="CreatorGridItem" />
  </children>
  <script type="text/brightscript" uri="pkg:/components/screens/category_screen.brs" />
</component>
