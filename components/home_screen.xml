<?xml version="1.0" encoding="utf-8" ?>
<component name="home_screen" extends="Scene" initialFocus="login_screen">
  <script type="text/brightscript" uri="pkg:/components/registry.brs" />
  <children>
    <login_screen
      id="login_screen"
      visible="true"
      translation="[0,0]" />
    <category_screen
      id="category_screen"
      visible="false"
      translation="[0,0]" />
    <content_screen
      id="content_screen"
      visible="false"
      translation="[0,0]" />
    <details_screen
      id="details_screen"
      visible="false"
      translation="[0,0]" />
    <Video
      id="videoplayer"
      visible="false"
      translation="[0,0]" />
    <Timer
      id="stream_timer"
      repeat="true"
      duration="5" />
  </children>
  <interface>
    <field id="subscriptions" type="string" onChange="onCategoryResponse" />
    <field id="selected_category" type="string" />
    <field id="deepcontentid" type="string" onChange="onDeepLinking"/>
    <field id="roinputdata" type="roAssociativeArray" onChange="onRoInput" />
  </interface>
  <script type="text/brightscript" uri="pkg:/components/home_screen.brs" />
</component>
